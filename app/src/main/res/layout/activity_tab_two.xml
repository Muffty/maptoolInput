<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tab_two"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.bitfighters.maptool.maptoolinput.MainTab">

    <TextView
        android:text="110"
        android:layout_height="wrap_content"
        android:id="@+id/currentHpValueTxt"
        android:layout_width="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_marginTop="7dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/currentHpTxt"
        android:layout_toEndOf="@+id/currentHpTxt"
        android:fontFamily="sans-serif"
        android:textSize="34sp"
        android:textColor="@android:color/holo_green_dark" />

    <TextView
        android:text="Current HP:   "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/currentHpTxt"
        android:layout_alignBottom="@+id/currentHpValueTxt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="11dp" />

    <TextView
        android:text="110"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@android:color/holo_green_dark"
        android:layout_alignBaseline="@+id/currentHpValueTxt"
        android:layout_alignBottom="@+id/currentHpValueTxt"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="  Max HP:   "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/maxHpTxt"
        android:layout_alignBaseline="@+id/currentHpTxt"
        android:layout_alignBottom="@+id/currentHpTxt"
        android:layout_toLeftOf="@+id/textView4"
        android:layout_toStartOf="@+id/textView4" />
</RelativeLayout>

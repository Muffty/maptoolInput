<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tab_two"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.bitfighters.maptool.maptoolinput.MainTab">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/redo"
        android:id="@+id/imageButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="rotateRight" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/undo"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/imageButton2"
        android:onClick="rotateLeft" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/chevron_right"
        android:id="@+id/rightButton"
        android:layout_below="@+id/topButton"
        android:layout_toRightOf="@+id/topButton"
        android:layout_toEndOf="@+id/topButton"
        android:onClick="right" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/chevron_down"
        android:id="@+id/downButton"
        android:layout_below="@+id/leftButton"
        android:layout_toRightOf="@+id/leftButton"
        android:layout_toEndOf="@+id/leftButton"
        android:onClick="down" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/chevron_up"
        android:id="@+id/topButton"
        android:layout_marginTop="81dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        style="@android:style/Widget.DeviceDefault.ImageButton"
        android:onClick="up"
        android:tint="@android:color/background_light" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/chevron_left"
        android:id="@+id/leftButton"
        android:layout_below="@+id/topButton"
        android:layout_toLeftOf="@+id/topButton"
        android:layout_toStartOf="@+id/topButton"
        android:onClick="left" />

    <CheckBox
        android:text="All Char Loaded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/allCharacterLoaded"
        android:clickable="false"
        android:layout_above="@+id/button5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:text="Character Loaded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/characterLoaded"
        android:clickable="false"
        android:layout_above="@+id/allCharacterLoaded"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:text="Map Loaded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mapLoaded"
        android:clickable="false"
        android:layout_above="@+id/characterLoaded"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Waypoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/waypointButton"
        android:onClick="waypoint"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="47dp" />

    <Button
        android:text="Walk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button5"
        android:onClick="walk"
        android:layout_alignBaseline="@+id/waypointButton"
        android:layout_alignBottom="@+id/waypointButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
